@model OmerSeyfettinApp.Models.RichEditData

@Html.DevExpress().RichEdit(settings => {
    settings.Name = "RichEditName";
    settings.CallbackRouteValues = new { Controller = "UserPost", Action = "RichEditPartial" };
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Saving = (s, e) =>
    {
        byte[] docBytes = RichEditExtension.SaveCopy("RichEditName", DevExpress.XtraRichEdit.DocumentFormat.Rtf);
        OmerSeyfettinApp.Models.DataHelper.SaveDocument(docBytes);
        e.Handled = true;
    };
}).Open(Model.DocumentId, Model.DocumentFormat, () => { return Model.Document; }).GetHtml()
